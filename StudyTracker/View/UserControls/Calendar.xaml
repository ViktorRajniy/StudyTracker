<UserControl x:Class="StudyTracker.View.Calendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudyTracker.View"
             mc:Ignorable="d" 
			 xmlns:vms="clr-namespace:StudyTracker.ViewModel.ViewModels" 
			 xmlns:uc="clr-namespace:StudyTracker.View.UserControls" 
			 d:DataContext="{d:DesignInstance Type=vms:CalendarViewModel}">

	<ListView ItemsSource="{Binding DaysViewModels}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
		
		<!--ListView resourses. Make ViewModel to View-->
		<ListView.Resources>
			<DataTemplate DataType="{x:Type vms:MyCalendarItemViewModel}">
				<uc:MyCalendarItem Margin="3"/>
			</DataTemplate>
		</ListView.Resources>

		<!--Item template-->
		<ListView.ItemsPanel>
			<ItemsPanelTemplate>
				<WrapPanel IsItemsHost="True" Margin="5"/>
			</ItemsPanelTemplate>
		</ListView.ItemsPanel>
	</ListView>
</UserControl>
